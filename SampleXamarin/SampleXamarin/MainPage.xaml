<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SampleXamarin"
             x:Class="SampleXamarin.MainPage" Title="Main Page">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Kalkulator" Order="Secondary" 
                     x:Name="menuKalkulator" Clicked="menuKalkulator_Clicked"  />
        <ToolbarItem Text="Hitung Segitiga" Order="Secondary" 
                     x:Name="menuSegitiga" Clicked="menuSegitiga_Clicked" />
        <ToolbarItem Text="Grid Layout" Order="Secondary" 
                     x:Name="menuGrid" Clicked="menuGrid_Clicked" />
        <ToolbarItem Text="Contoh ListView" Order="Secondary" 
                     x:Name="menuList" Clicked="menuList_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Main Page" FontSize="Large" HorizontalTextAlignment="Center" />
        </StackLayout>
    </ContentPage.Content>
   

</ContentPage>