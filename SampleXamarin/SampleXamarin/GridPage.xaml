<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleXamarin.GridPage" Title="Sample Grid">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="Pojok Kiri Atas" Grid.Column="0" Grid.Row="0" FontSize="Large" 
                   HorizontalOptions="Center" VerticalTextAlignment="Center" />
            <Label Text="Pojok Kanan Atas" Grid.Column="1" Grid.Row="0" FontSize="Large" 
                   HorizontalOptions="Center" VerticalTextAlignment="Center" />
            <Label Text="Pojok Kiri Bawah" Grid.Column="0" Grid.Row="1" FontSize="Large" 
                   HorizontalOptions="Center" VerticalTextAlignment="Center" />
            <Label Text="Pojok Kanan Bawah" Grid.Column="1" Grid.Row="1" FontSize="Large" 
                   HorizontalOptions="Center" VerticalTextAlignment="Center" />
        </Grid>
    </ContentPage.Content>
</ContentPage>