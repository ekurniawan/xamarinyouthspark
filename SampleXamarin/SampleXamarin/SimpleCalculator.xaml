<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleXamarin.SimpleCalculator" Title="Kalkulator">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Simple Calculator" FontSize="Large" TextColor="Blue"
                   HorizontalTextAlignment="Center" Margin="0,0,0,20" />
            
            <Label Text="Masukan Bilangan 1 :" FontSize="Medium" Margin="2" />
            <Entry Placeholder="masukan bilangan 1" Keyboard="Numeric" x:Name="txtBil1" Margin="2" />

            <Label Text="Masukan Bilangan 2 :" FontSize="Medium" Margin="2"  />
            <Entry Placeholder="masukan bilangan 2" Keyboard="Numeric" x:Name="txtBil2" Margin="2" />

            <Label Text="Hasil :" FontSize="Medium" Margin="2" />
            <Entry IsVisible="False" x:Name="txtHasil" Margin="2" />

            <StackLayout Orientation="Horizontal" Margin="2">
                <Button Text="Tambah" x:Name="btnTambah" Clicked="btnTambah_Clicked" />
                <Button Text="Kurang" x:Name="btnKurang" Clicked="btnKurang_Clicked" />
                <Button Text="Bagi" x:Name="btnBagi" Clicked="btnBagi_Clicked"/>
                <Button Text="Kali" x:Name="btnKali" Clicked="btnKali_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>